<link rel="stylesheet" href="/assets/css/single.css">

<div class="container">
	<div class="jumbotron">
		<form id="updateForm" data-id={{id}}>
			<div class="form-group">
				<label class="display-1" for="nameInput">Name: </label>
				<input autocomplete="off" type="text" id="nameInput" class="form-control" value="{{name}}">
				<hr class="my-4">
			</div>
			<div class="form-group">
				<p class="display-4" id="idInput">Id: {{id}}</p>
			</div>
			<br>
			<div class="form-group">
				<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="eatenRadio" id="eaten" value="1" {{#if eaten}}checked{{/if}}>
				  <label class="form-check-label" for="eaten">Eaten</label>
				</div>
				<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="eatenRadio" id="notEaten" value="0" {{#unless eaten}}checked{{/unless}}>
				  <label class="form-check-label" for="notEaten">Not eaten</label>
				</div>
			</div>
			<button type="submit" class="btn btn-danger">Submit</button>
		</form>
	</div>
</div>

<script src="/assets/js/single.js"></script>